# .env.example - Configuration for CareerFlow

# ==============================================================================
# GENERAL APPLICATION SETTINGS
# ==============================================================================
# Set to 0 for production, 1 for development
DEBUG=1
# Recommended for Docker to ensure print statements appear without delay
PYTHONUNBUFFERED=1
# For Next.js (careerflow frontend)
NODE_ENV=development # or production
NEXT_TELEMETRY_DISABLED=1

# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================
# *** CHANGE THIS IN PRODUCTION TO A LONG, RANDOM STRING ***
DJANGO_SECRET_KEY=your_strong_django_secret_key_here
# In production, list your allowed hostnames, e.g., yourdomain.com,www.yourdomain.com
DJANGO_ALLOWED_HOSTS=* # e.g., localhost,127.0.0.1,yourdomain.com
# Change if you use a specific production settings file, e.g., proj0.settings.production
DJANGO_SETTINGS_MODULE=proj0.settings

# ==============================================================================
# DATABASE (PostgreSQL)
# These variables are used by the 'db' service and Django
# ==============================================================================
POSTGRES_DB=postgres
POSTGRES_USER=postgres
# *** CHANGE THIS IN PRODUCTION ***
POSTGRES_PASSWORD=your_postgres_password

# Django database connection settings (uses the above PostgreSQL values)
# These are typically derived from the POSTGRES_* vars above when using Docker Compose.
DJANGO_DB_NAME=${POSTGRES_DB}
DJANGO_DB_USER=${POSTGRES_USER}
DJANGO_DB_PASSWORD=${POSTGRES_PASSWORD}
DJANGO_DB_HOST=db # This is the service name in docker-compose.yml
DJANGO_DB_PORT=5432

# ==============================================================================
# EMAIL SETTINGS (for Django)
# ==============================================================================
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587 # Or 465 for SSL
EMAIL_HOST_USER=your_smtp_username
# *** CHANGE THIS IN PRODUCTION ***
EMAIL_HOST_PASSWORD=your_smtp_password
# EMAIL_USE_TLS=True # Or False
# EMAIL_USE_SSL=False # Or True

# ==============================================================================
# AUTHENTICATION & AUTHORIZATION
# ==============================================================================
# NextAuth (for CareerFlow frontend)
# Change to your production frontend URL (e.g., https://www.yourdomain.com)
NEXTAUTH_URL=http://localhost:3000 # e.g., http://localhost:3000 or https://yourdomain.com
# *** CHANGE THIS IN PRODUCTION TO A LONG, RANDOM STRING ***
NEXTAUTH_SECRET=your_strong_nextauth_secret_key_here
NEXTAUTH_JWT_SECRET=your_strong_nextauth_jwt_secret_key_here # Used if JWT strategy is enabled in NextAuth

# Django JWT Settings (if you use DRF Simple JWT or similar)
# *** CHANGE THIS IN PRODUCTION ***
JWT_SECRET_KEY=your_strong_django_jwt_secret_key_here
JWT_ALGORITHM=HS256

# Google OAuth Credentials (used by Django and CareerFlow)
# *** REPLACE WITH YOUR ACTUAL GOOGLE CLOUD CONSOLE CREDENTIALS ***
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ==============================================================================
# API URLs & SERVICE INTEGRATIONS
# ==============================================================================
# For CareerFlow Frontend (runtime URLs, typically your public-facing Nginx proxy or dev server)
# For local development, these might point to localhost with respective ports.
# For production with Docker, these often point to the Nginx service name if accessed internally by other services,
# or the public domain if accessed by the client browser.
NEXT_PUBLIC_API_URL=http://localhost:880 # e.g., http://localhost:880 or http://nginx:80 or https://api.yourdomain.com
NEXT_PUBLIC_DJANGO_URL=http://localhost:880 # e.g., http://localhost:880 or http://nginx:80 or https://django.yourdomain.com
NEXT_PUBLIC_BACKEND_URL=http://localhost:880 # General backend URL, often same as DJANGO_URL
NEXTAUTH_BACKEND_URL=http://localhost:880 # URL NextAuth uses to communicate with the backend for auth
NEXT_PUBLIC_AI_API_URL=http://localhost:580 # e.g., http://localhost:580 or http://api:80 or https://ai.yourdomain.com

# For CareerFlow Frontend (build-time args, if needed to be different from runtime)
# These can be the same as runtime if no special build-time value is needed.
# The docker-compose uses ${..._BUILD:-http://localhost:880} so these can be omitted if default is fine.
# NEXT_PUBLIC_API_URL_BUILD=
# NEXT_PUBLIC_BACKEND_URL_BUILD=

# AI Service URL (internal Docker network URL from Django to the 'api' service)
AI_SERVICE_URL=http://api:80/resumes/

# ==============================================================================
# LANGCHAIN & GOOGLE AI (for the 'api' service)
# ==============================================================================
# For Google Generative AI, different from OAuth Client ID
GOOGLE_API_KEY=your_google_ai_api_key_here
LANGCHAIN_TRACING_V2=true # or false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com # or your self-hosted LangSmith endpoint
LANGCHAIN_API_KEY=your_langsmith_api_key_here # (ls_... format)
LANGCHAIN_PROJECT=your_langsmith_project_name_here

# ==============================================================================
# LINKEDIN API CREDENTIALS (Optional, if used)
# ==============================================================================
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret