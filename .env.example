# .env.example - Configuration for CareerFlow

# ==============================================================================
# GENERAL APPLICATION SETTINGS
# ==============================================================================
# Set to 0 for production, 1 for development
DEBUG=0
# Recommended for Docker to ensure print statements appear without delay
PYTHONUNBUFFERED=1
# For Next.js (careerflow frontend)
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================
# Domain or IP address where the application is hosted
DOMAIN=localhost
# Nginx port (external port that nginx is exposed on)
NGINX_PORT=880

# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================
# *** CHANGE THIS IN PRODUCTION TO A LONG, RANDOM STRING ***
DJANGO_SECRET_KEY=your-django-secret-key-here
# In production, list your allowed hostnames, e.g., yourdomain.com,www.yourdomain.com
DJANGO_ALLOWED_HOSTS=*
# Change if you use a specific production settings file, e.g., proj0.settings.production
DJANGO_SETTINGS_MODULE=proj0.settings

# ==============================================================================
# DATABASE (PostgreSQL)
# These variables are used by the 'db' service and Django
# ==============================================================================
POSTGRES_DB=postgres
POSTGRES_USER=postgres
# *** CHANGE THIS IN PRODUCTION ***
POSTGRES_PASSWORD=postgres

# Django database connection settings (uses the above PostgreSQL values)
DJANGO_DB_NAME=postgres
DJANGO_DB_USER=postgres
DJANGO_DB_PASSWORD=postgres
DJANGO_DB_HOST=db # This is the service name in docker-compose.yml
DJANGO_DB_PORT=5432

# ==============================================================================
# EMAIL SETTINGS (for Django)
# ==============================================================================
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587 # Or 465 for SSL
EMAIL_HOST_USER=your_smtp_username
# *** CHANGE THIS IN PRODUCTION ***
EMAIL_HOST_PASSWORD=your_smtp_password
# EMAIL_USE_TLS=True # Or False
# EMAIL_USE_SSL=False # Or True

# ==============================================================================
# AUTHENTICATION & AUTHORIZATION
# ==============================================================================
# NextAuth (for CareerFlow frontend)
# Change to your production frontend URL (e.g., https://www.yourdomain.com)
NEXTAUTH_URL=http://${DOMAIN}:${NGINX_PORT}
# *** CHANGE THIS IN PRODUCTION TO A LONG, RANDOM STRING ***
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_JWT_SECRET=your-jwt-secret-key

# Django JWT Settings (if you use DRF Simple JWT or similar)
# *** CHANGE THIS IN PRODUCTION ***
JWT_SECRET_KEY=your-django-jwt-secret-key
JWT_ALGORITHM=HS256

# Google OAuth Credentials (used by Django and CareerFlow)
# *** REPLACE WITH YOUR ACTUAL GOOGLE CLOUD CONSOLE CREDENTIALS ***
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==============================================================================
# API URLs & SERVICE INTEGRATIONS
# ==============================================================================
# For CareerFlow Frontend (runtime URLs, using domain and nginx port)
NEXT_PUBLIC_BACKEND_URL=http://${DOMAIN}:${NGINX_PORT}
NEXT_PUBLIC_API_URL=http://${DOMAIN}:${NGINX_PORT}/api
NEXT_PUBLIC_AI_API_URL=http://${DOMAIN}:${NGINX_PORT}/ai-api
NEXTAUTH_BACKEND_URL=http://nginx:80 

# AI Service URL (internal Docker network URL from Django to the 'api' service)
AI_SERVICE_URL=http://api:80/resumes/

# ==============================================================================
# LANGCHAIN & GOOGLE AI (for the 'api' service)
# ==============================================================================
# For Google Generative AI, different from OAuth Client ID
GOOGLE_API_KEY=your-google-ai-api-key-here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=your-langsmith-project-name-here

# Third-party API Keys
NEXT_PUBLIC_IPDATA_API_KEY=your-ipdata-api-key-here

# ==============================================================================
# LINKEDIN API CREDENTIALS (Optional, if used)
# ==============================================================================
# LINKEDIN_CLIENT_ID=your-actual-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-actual-linkedin-client-secret